{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "module": "es2020",
    "pretty": true,
    "skipLibCheck": true,
    "lib": ["dom", "es2020"],
    "resolveJsonModule": true,
  },
  "angularCompilerOptions": {
    "enableIvy": true
  }
}
